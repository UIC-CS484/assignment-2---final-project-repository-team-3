<!DOCTYPE html>
<html lang="en">
<head>
    <title> Index </title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/axios/0.19.2/axios.min.js"></script>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link href="//cdn.datatables.net/1.11.3/css/jquery.dataTables.min.css" rel="stylesheet">
    <script type="text/javascript" src="//cdn.datatables.net/1.11.3/js/jquery.dataTables.min.js"></script>
    <script src="https://code.highcharts.com/highcharts.src.js"></script>

</head>
<body>

<div class="container">
    <h1 class="text-center">{{user.firstname}}'s Box</h1>
</div>
<hr/>
<div class="container">
    <table id="favoriteTable" class="table table-striped table-bordered table-sm">
        <thead>
        <th class="th-sm">Favorite #</th>
        <th class="th-sm">Pokemon Name</th>
        <th class="th-sm">Type 1</th>
        <th class="th-sm">Type 2</th>
        <th class="th-sm">Action</th>
        </thead>
        <tbody>
        {{#each rows}}
            <tr>
                <td>{{id}}</td>
                <td>{{pokemon_id}}</td>
                <td>{{type_a}}</td>
                <td>{{type_b}}</td>
                <td>
                    <button class="btn btn-danger">Delete</button>
                </td>
            </tr>
        {{/each}}
        </tbody>
    </table>

</div>


<p>

</p>
<script>
    $(document).ready(function () {
        var tbl = $('#favoriteTable').DataTable({
            columns: [
                null,
                null,
                {sortable: false},
                {sortable: false},
                {sortable: false}
            ]
        });
        $('#favoriteTable tbody').on('click', 'button', function () {
            var data = tbl.row($(this).parents('tr')).data();
            axios.delete('/users/favorites/', {
                data: {
                    pokemon_id: data[1]
                }
            }).then(res => tbl.row($(this).parents('tr')).remove().draw(false))
                    .catch(err => console.log(err));

        });

        var chartDiv = $('<div/>').insertAfter(tbl.table().container());
        var chart = Highcharts.chart(chartDiv[0], {
            chart: {
                type: "pie"
            },
            series: [
                {
                    data: getChartData(tbl)
                }
            ]
        });
        tbl.on('draw', function () {
            chart.series[0].setData(getChartData(tbl));
        })

    });



    function getChartData(table) {
        var counts = {};
        table
                .column(2, {search: 'applied'})
                .data()
                .each(function (val) {
                    if (counts[val]) {
                        counts[val] += 1
                    } else {
                        counts[val] = 1;
                    }
                });

        return $.map(counts, function (val, key) {
            return {
                name: key,
                y: val
            }
        })
    }

</script>
</body>
</html>
